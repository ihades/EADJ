{
  "apiVersion" : "1",
  "swaggerVersion" : "1.2",
  "basePath" : "/bookstore/rest",
  "resourcePath" : "/customers",
  "apis" : [ {
    "path" : "/customers",
    "operations" : [ {
      "method" : "POST",
      "nickname" : "registerCustomer",
      "type" : "string",
      "parameters" : [ {
        "type" : "registration",
        "description" : "the data of the customer to be registered (the number\n must be null)",
        "paramType" : "body",
        "name" : "registration",
        "required" : true
      } ],
      "summary" : "Registers a customer with the bookstore.",
      "notes" : "The email address and password\n will be used to authenticate the customer.",
      "responseMessages" : [ {
        "code" : 201,
        "message" : "created"
      }, {
        "code" : 400,
        "message" : "bad request (incomplete customer data)"
      }, {
        "code" : 409,
        "message" : "conflict (email already used)"
      }, {
        "code" : 500,
        "message" : "internal server error (unexpected system error)"
      } ],
      "consumes" : [ "application/xml", "application/json" ],
      "produces" : [ "text/plain" ]
    }, {
      "method" : "GET",
      "nickname" : "searchCustomer",
      "type" : "array",
      "items" : {
        "$ref" : "customerInfo"
      },
      "parameters" : [ {
        "type" : "string",
        "description" : "the name to search for",
        "paramType" : "query",
        "name" : "name"
      } ],
      "summary" : "Searches for customers by name.",
      "notes" : "A customer is included in the result list\n if the specified name is part of the customer's first or last name.",
      "responseMessages" : [ {
        "code" : 400,
        "message" : "bad request (name missing)"
      }, {
        "code" : 500,
        "message" : "internal server error (unexpected system error)"
      } ],
      "produces" : [ "application/xml", "application/json" ]
    } ]
  }, {
    "path" : "/customers/{number}",
    "operations" : [ {
      "method" : "GET",
      "nickname" : "findCustomer",
      "type" : "customer",
      "parameters" : [ {
        "type" : "string",
        "description" : "the number of the customer",
        "paramType" : "path",
        "name" : "number",
        "required" : true
      } ],
      "summary" : "Finds a customer by number.",
      "responseMessages" : [ {
        "code" : 404,
        "message" : "not found (customer not found)"
      }, {
        "code" : 500,
        "message" : "internal server error (unexpected system error)"
      } ],
      "produces" : [ "application/xml", "application/json" ]
    }, {
      "method" : "PUT",
      "nickname" : "updateCustomer",
      "type" : "void",
      "parameters" : [ {
        "type" : "string",
        "description" : "the number of the customer to be updated",
        "paramType" : "path",
        "name" : "number",
        "required" : true
      }, {
        "type" : "customer",
        "description" : "the data of the customer to be updated (the number must\n not be null)",
        "paramType" : "body",
        "name" : "customer",
        "required" : true
      } ],
      "summary" : "Updates the data of a customer.",
      "notes" : "If the email address is to be changed,\n the new email address is used for authentication.",
      "responseMessages" : [ {
        "code" : 400,
        "message" : "bad request (incomplete customer data)"
      }, {
        "code" : 404,
        "message" : "not found (customer not found)"
      }, {
        "code" : 409,
        "message" : "conflict (new email already used)"
      }, {
        "code" : 500,
        "message" : "internal server error (unexpected system error)"
      } ],
      "consumes" : [ "application/xml", "application/json" ]
    } ]
  } ],
  "models" : {
    "CreditCardDTO" : {
      "id" : "CreditCardDTO",
      "properties" : {
        "type" : {
          "type" : "string",
          "enum" : [ "MasterCard", "Visa" ]
        },
        "number" : {
          "type" : "string"
        },
        "expirationMonth" : {
          "type" : "integer",
          "format" : "int32"
        },
        "expirationYear" : {
          "type" : "integer",
          "format" : "int32"
        }
      }
    },
    "customerInfo" : {
      "id" : "customerInfo",
      "properties" : {
        "number" : {
          "type" : "string"
        },
        "firstName" : {
          "type" : "string"
        },
        "lastName" : {
          "type" : "string"
        },
        "email" : {
          "type" : "string"
        }
      }
    },
    "registration" : {
      "id" : "registration",
      "properties" : {
        "password" : {
          "type" : "string"
        },
        "customer" : {
          "type" : "customer"
        }
      }
    },
    "address" : {
      "id" : "address",
      "properties" : {
        "street" : {
          "type" : "string"
        },
        "city" : {
          "type" : "string"
        },
        "postalCode" : {
          "type" : "string"
        },
        "country" : {
          "type" : "string"
        }
      }
    },
    "customer" : {
      "id" : "customer",
      "properties" : {
        "email" : {
          "type" : "string"
        },
        "firstName" : {
          "type" : "string"
        },
        "lastName" : {
          "type" : "string"
        },
        "number" : {
          "type" : "string"
        },
        "address" : {
          "type" : "address"
        },
        "creditCard" : {
          "type" : "CreditCardDTO"
        }
      }
    }
  }
}