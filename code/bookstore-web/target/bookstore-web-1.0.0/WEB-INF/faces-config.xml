<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>bundles.texts</base-name>
            <var>lang</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>bundles.statusTranslator</base-name>
            <var>status</var>
        </resource-bundle>
        <message-bundle>bundles.messages</message-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/bookDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pageController.processcatalogSearch.xhtml}</from-action>
            <from-outcome>back</from-outcome>
            <to-view-id>/catalogSearch.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/userLogin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/userDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/userEditDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/userDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/userDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/userCreate.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/userLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/userDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/changePassword.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/userDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/userDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/catalogSearch.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>Â 
        <from-view-id>/checkOut.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/catalogSearch.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!--loginstuff for modal window. disgusting as of now.-->
    <navigation-rule>
        <from-view-id>/catalogSearch.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.logIn()}</from-action>}
            <from-outcome>success</from-outcome>
            <to-view-id>/checkOut.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/shoppingBasket.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.logIn()}</from-action>}
            <from-outcome>success</from-outcome>
            <to-view-id>/checkOut.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/userDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.logIn()}</from-action>}
            <from-outcome>success</from-outcome>
            <to-view-id>/checkOut.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
